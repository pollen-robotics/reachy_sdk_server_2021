[Unit]
Description=Reachy SDK server service
Wants=network-online.target
After=network.target network-online.target
[Service]
PIDFile=/var/run/reachy_sdk_server.pid
Environment="PYTHONPATH=$PYTHONPATH:/home/nuc/reachy_ws/install/reachy_sdk_server/lib/python3.8/site-packages:/home/nuc/reachy_ws/install/reachy_controllers/lib/python3.8/site-packages:/home/nuc/reachy_ws/install/reachy_msgs/lib/python3.8/site-packages:/opt/ros/foxy/lib/python3.8/site-packages"
Environment="LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/home/nuc/reachy_ws/install/reachy_msgs/lib:/home/nuc/reachy_ws/install/kdl_parser/lib:/opt/ros/foxy/opt/yaml_cpp_vendor/lib:/opt/ros/foxy/opt/rviz_ogre_vendor/lib:/opt/ros/foxy/lib/x86_64-linux-gnu:/opt/ros/foxy/lib"
ExecStart=/usr/bin/python3 -m reachy_sdk_server.reachy_sdk_server
User=nuc
Group=nuc
Type=simple
[Install]
WantedBy=multi-user.target